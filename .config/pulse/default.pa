#

# include pulse system settings
.include /etc/pulse/default.pa

# switch on connect (for bluetooth devices)
load-module module-switch-on-connect

# default sink
set-default-sink alsa_output.usb-Logitech_Logitech_G35_Headset-00.analog-stereo
set-default-source alsa_input.usb-Logitech_Logitech_G25_Headset-00.analog-stereo.monitor
